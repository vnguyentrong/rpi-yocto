<?xml version="1.0" encoding="UTF-8"?>
<manifest>
    <!-- Default settings -->
    <default revision="main" remote="origin" sync-j="4"/>

    <!-- Define remotes -->
    <remote name="yocto" fetch="https://github.com/yoctoproject"/>
    <remote name="rpi" fetch="https://github.com/agherzan"/>
    <remote name="custom" fetch="https://github.com/my-org"/>

    <!-- Yocto layers -->
    <project name="poky.git" path="poky" remote="yocto" revision="dunfell"/>
    <project name="meta-openembedded.git" path="meta-openembedded" remote="yocto" revision="dunfell"/>
    <project name="meta-raspberrypi.git" path="meta-raspberrypi" remote="rpi" revision="dunfell"/>
    <project name="meta-custom.git" path="meta-custom" remote="custom" revision="main"/>
</manifest>
